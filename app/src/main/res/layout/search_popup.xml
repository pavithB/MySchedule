<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/searchPopupView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/border"
    android:padding="10px"
    android:orientation="vertical"
    android:gravity="center">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_margin="20dp"
                android:textColor="@color/Honeydew"
                android:textStyle="bold"
                android:text="Appointment Title"/>

            <TextView
                android:id="@+id/searchedTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#00E676"
                android:textSize="28sp"
                android:textStyle="italic"
                android:text="" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/Honeydew"
                android:layout_margin="20dp"
                android:textStyle="bold"
                android:text="Appointment Time" />

            <TextView
                android:id="@+id/searchedTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#00E676"
                android:textSize="28sp"
                android:textStyle="italic"
                android:text="" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/Honeydew"
                android:layout_margin="20dp"
                android:textStyle="bold"
                android:text="Appointment Discription" />

            <TextView
                android:id="@+id/searchedDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="28sp"
                android:textColor="#00E676"
                android:textStyle="italic"
                android:layout_marginBottom="30dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>