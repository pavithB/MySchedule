<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pavithbuddhima.myschedule.CalenderMain"
    >




    <CalendarView
        android:layout_width="369dp"
        android:layout_height="330dp"

        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:id="@+id/pickdate"
        android:layout_marginTop="27dp"
        app:layout_constraintTop_toBottomOf="@+id/editText">


    </CalendarView>


    <Button
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/viewedit"
        android:text="Create Appointment  "
        android:textStyle="bold"
        android:textAllCaps="false"
        android:background="#009688"
        android:id="@+id/create"
        android:layout_marginBottom="41dp"
        app:layout_constraintBottom_toTopOf="@+id/viewedit" />





    <Button
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="41dp"
        app:layout_constraintBottom_toTopOf="@+id/delete"
        app:layout_constraintRight_toRightOf="@+id/delete"
        android:text="Move Appointment  "
        android:textAllCaps="false"
        android:textStyle="bold"
        android:background="#03A9F4"
        android:id="@+id/move"
        app:layout_constraintLeft_toRightOf="@+id/create"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginStart="8dp" />



    <Button
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/viewedit"
        android:textStyle="bold"
        android:text="View/Edit Appointment  "
        android:textAllCaps="false"
        android:background="#FFC107"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/delete"
        app:layout_constraintTop_toTopOf="@+id/delete"
        app:layout_constraintVertical_bias="0.0" />





    <Button
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="17dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/delete"
        android:textStyle="bold"
        android:text="Delete Appointment  "
        android:textAllCaps="false"
        android:background="#F44336"
        android:layout_marginEnd="16dp"
        app:layout_constraintLeft_toRightOf="@+id/viewedit"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginStart="8dp" />

<EditText
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:id="@+id/editText"
    android:hint=" enter search word and press search"
    app:layout_constraintBaseline_toBaselineOf="@+id/button"
    android:layout_marginLeft="7dp"
    app:layout_constraintLeft_toLeftOf="parent" />


    <Button
        android:background="#7B1FA2"
        android:textColor="#ffffff"
        android:textStyle="italic"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/button"
        android:text="search"
        app:layout_constraintLeft_toRightOf="@+id/editText"
        android:layout_marginLeft="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="33dp" />


</android.support.constraint.ConstraintLayout>

