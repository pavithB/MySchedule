<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pavithbuddhima.myschedule.CalenderMain"
    >




    <CalendarView
        android:layout_width="369dp"
        android:layout_height="330dp"

        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/searchView"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:id="@+id/pickdate">


    </CalendarView>


    <Button
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/viewedit"
        android:text="Create Appointment  "
        android:textStyle="bold"
        android:textAllCaps="false"
        android:background="#009688"
        android:id="@+id/create"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="41dp"
        app:layout_constraintBottom_toTopOf="@+id/viewedit" />





    <Button
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="41dp"
        app:layout_constraintBottom_toTopOf="@+id/delete"
        app:layout_constraintRight_toRightOf="@+id/delete"
        android:text="Move Appointment  "
        android:textAllCaps="false"
        android:textStyle="bold"
        android:background="#03A9F4"
        android:id="@+id/move"
        android:layout_marginRight="0dp"
        app:layout_constraintLeft_toRightOf="@+id/create"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="1.0" />



    <Button
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/viewedit"
        android:textStyle="bold"
        android:text="View/Edit Appointment  "
        android:textAllCaps="false"
        android:background="#FFC107"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/delete"
        app:layout_constraintTop_toTopOf="@+id/delete"
        android:layout_marginTop="0dp"
        app:layout_constraintVertical_bias="0.0" />





    <Button
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="17dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/delete"
        android:textStyle="bold"
        android:text="Delete Appointment  "
        android:textAllCaps="false"
        android:background="#F44336"
        android:layout_marginEnd="16dp"
        app:layout_constraintLeft_toRightOf="@+id/viewedit"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="1.0" />

    <SearchView

        android:id="@+id/searchView"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="30dp"
        android:gravity="end"
        android:textAlignment="gravity"
        app:layout_constraintHorizontal_bias="0.966"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />


</android.support.constraint.ConstraintLayout>

