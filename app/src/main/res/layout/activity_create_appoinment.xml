<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#292929"
    tools:context="com.pavithbuddhima.myschedule.CreateAppoinment">




    <TextView
        android:textColor="#00BFA5"
        android:textAlignment="center"
        android:id="@+id/textView"
        android:layout_width="119dp"
        android:layout_height="35dp"
        android:text="TITLE"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/titleedit"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:textColor="#00B8D4"
        android:textAlignment="center"
        android:layout_width="119dp"
        android:layout_height="35dp"
        android:text="TIME"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginEnd="198dp"
        android:id="@+id/textView3"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginBottom="-21dp"
        app:layout_constraintBottom_toTopOf="@+id/timeedit" />

    <TextView
        android:textColor="#0091EA"
        android:textAlignment="center"
        android:id="@+id/textView2"
        android:layout_width="119dp"
        android:layout_height="35dp"
        android:text="DETAILS"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginBottom="-21dp"
        app:layout_constraintBottom_toTopOf="@+id/editdetail"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="231dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView3"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="0.0" />


    <EditText
        android:textColor="#ffffff"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="30dp"
        android:id="@+id/titleedit"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="52dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintVertical_bias="1.0" />


    <EditText
        android:textColor="#ffffff"
        android:maxHeight="200dp"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:id="@+id/editdetail"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="57dp"
        app:layout_constraintTop_toBottomOf="@+id/timeedit" />

    <TimePicker
        android:amPmTextColor="#A7FFEB"
        android:background="#424242"
        android:numbersTextColor="#00BFA5"
        android:id="@+id/timeedit"
        android:layout_width="255dp"
        android:layout_height="131dp"
        android:timePickerMode="spinner"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="96dp"
        app:layout_constraintTop_toBottomOf="@+id/titleedit"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:id="@+id/savebtn"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        android:text="SAve"
        android:textStyle="bold"
        android:background="#F44336"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="595dp"
        tools:layout_editor_absoluteX="16dp" />

</android.support.constraint.ConstraintLayout>
