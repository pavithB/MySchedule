<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/grey29"
    tools:context="com.pavithbuddhima.myschedule.CreateAppoinment">

<TextView
    android:background="#880E4F"
    android:text="\n\t Create Appointment"
    android:textSize="23dp"
    android:textColor="#eeeeee"
    android:layout_width="412dp"
    android:textStyle="bold"
    android:shadowColor="@color/Black"
    android:shadowDx="5"
    android:shadowDy="5"
    android:shadowRadius="1"
    android:layout_height="59dp"
    android:id="@+id/textView5"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginRight="8dp"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintHorizontal_bias="0.111"
    android:layout_marginEnd="8dp" />


    <TextView
        android:textColor="#E91E63"
        android:id="@+id/textView"
        android:layout_width="119dp"
        android:layout_height="35dp"
        android:text="TITLE"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/titleedit"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintHorizontal_bias="0.028" />

    <TextView
        android:textColor="#E91E63"
        android:layout_width="119dp"
        android:layout_height="35dp"
        android:text="TIME"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginEnd="198dp"
        android:id="@+id/textView3"
        app:layout_constraintLeft_toLeftOf="@+id/textView"
        android:layout_marginRight="198dp"
        app:layout_constraintRight_toRightOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintBottom_toTopOf="@+id/timeedit" />

    <TextView
        android:textColor="#E91E63"
        android:id="@+id/textView2"
        android:layout_width="119dp"
        android:layout_height="35dp"
        android:text="DETAILS"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/editdetail"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="231dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView3"
        android:layout_marginRight="231dp"
        app:layout_constraintRight_toRightOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="0.033" />


    <EditText
        android:textColor="#ffffff"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="30dp"
        android:id="@+id/titleedit"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="0.49" />


    <EditText
        android:textColor="#ffffff"
        android:maxHeight="120dp"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:id="@+id/editdetail"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="58dp"
        app:layout_constraintTop_toBottomOf="@+id/timeedit" />

    <TimePicker
        android:background="@color/DarkSlateGray"
        android:numbersTextColor="#00BFA5"
        android:id="@+id/timeedit"
        android:layout_width="255dp"
        android:layout_height="131dp"
        android:timePickerMode="spinner"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@+id/titleedit"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />


    <EditText
        android:layout_width="260dp"
        android:layout_height="48dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/editdetail"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/editdetail"
        app:layout_constraintRight_toRightOf="@+id/editdetail"
        app:layout_constraintHorizontal_bias="0.0"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:layout_marginStart="8dp"
        android:id="@+id/thesaurusWord" />


    <TextView
        android:id="@+id/thesaurustext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="need a synonyms for a word, just Type a word in the above text box and press the THESAURUS button"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/thesaurusWord"
        android:layout_marginLeft="-16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="1.0" />



    <Button
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:id="@+id/savebtn"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        android:text="SAve"
        android:textStyle="bold"
        android:background="#F44336"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:background="#8BC34A"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:id="@+id/thesaurusbtn"
        android:text="Theasurus"
        android:layout_marginEnd="31dp"
        app:layout_constraintTop_toTopOf="@+id/thesaurusWord"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/thesaurusWord"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginRight="31dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        android:layout_marginBottom="8dp"
        android:id="@+id/thesaurusbtn2"
        android:text="Theasurus"
        android:background="#01579B"
        android:layout_marginStart="33dp"
        app:layout_constraintTop_toTopOf="@+id/textView2"
        app:layout_constraintLeft_toRightOf="@+id/textView2"
        android:layout_marginLeft="33dp"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.761" />

</android.support.constraint.ConstraintLayout>
