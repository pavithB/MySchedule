<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pavithbuddhima.myschedule.CreateAppoinment">




    <TextView
        android:id="@+id/textView"
        android:layout_width="119dp"
        android:layout_height="35dp"
        android:text="TITLE"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/editText"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/editText"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginBottom="9dp"
        app:layout_constraintBottom_toTopOf="@+id/editText"
        android:layout_marginEnd="8dp" />

    <TextView
        android:layout_width="119dp"
        android:layout_height="35dp"
        android:text="TIME"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginEnd="198dp"
        android:layout_marginRight="198dp"
        app:layout_constraintRight_toRightOf="@+id/timePicker"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/timePicker" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="119dp"
        android:layout_height="35dp"
        android:text="DETAILS"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginRight="231dp"
        app:layout_constraintRight_toRightOf="@+id/editText2"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/editText2"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginBottom="14dp"
        app:layout_constraintBottom_toTopOf="@+id/editText2"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="231dp" />


    <EditText
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="30dp"
        android:id="@+id/editText"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="88dp"
        app:layout_constraintHorizontal_bias="0.177"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />


    <EditText
        android:layout_width="352dp"
        android:layout_height="145dp"
        android:id="@+id/editText2"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.186"
        android:layout_marginBottom="78dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TimePicker

        android:id="@+id/timePicker"
        android:layout_width="255dp"
        android:layout_height="131dp"
        android:timePickerMode="spinner"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/editText2"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/editText"
        app:layout_constraintVertical_bias="0.468"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:id="@+id/savebtn"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/editText2"
        android:text="SAve"
        android:textStyle="bold"
        android:background="#F44336"/>

</android.support.constraint.ConstraintLayout>
