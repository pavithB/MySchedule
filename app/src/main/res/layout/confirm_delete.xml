<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#E0F2F1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    tools:context="com.pavithbuddhima.myschedule.CalenderMain"
    >

    <TextView
        android:id="@+id/textView6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Confirmation!"
        android:textAlignment="center"
        android:textColor="#111111"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/confirmDeleteText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.07"
        android:text=""
        android:textAlignment="center"
        android:textColor="#111111"
        android:textSize="20dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />



    <Button
        android:id="@+id/confirmYes"
        android:layout_width="142dp"
        android:layout_height="wrap_content"
        android:background="#F44336"
        android:text="Yes"
        android:textAllCaps="false"
        android:textSize="15dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/confirmNo"
        app:layout_constraintRight_toLeftOf="@+id/confirmNo"
        android:layout_marginRight="8dp" />


    <Button
        android:id="@+id/confirmNo"
        android:layout_width="142dp"
        android:layout_height="wrap_content"
        android:background="#FF9800"
        android:text="No"
        android:textAllCaps="false"
        android:textSize="15dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/confirmDeleteText"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toBottomOf="@+id/confirmDeleteText"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="1.0" />
    <Space
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toBottomOf="@+id/confirmNo"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        app:layout_constraintGuide_begin="20dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="20dp"
        tools:layout_editor_absoluteX="0dp" />


</android.support.constraint.ConstraintLayout>
